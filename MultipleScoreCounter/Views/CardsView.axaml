<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MultipleScoreCounter.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MultipleScoreCounter.Views.CardsView">
    
    <Design.DataContext>
        <viewModels:CardsViewModel/>
    </Design.DataContext>
    
    <DockPanel>
        <ListBox Items="{Binding SearchResults}" SelectedItem="{Binding SelectedCard}" Background="Transparent" Margin="0 20" />
        <Button Command="{Binding SelectCardCommand}" Content="Vybrat kartu" DockPanel.Dock="Bottom" HorizontalAlignment="Center" />
    </DockPanel>
</UserControl>
